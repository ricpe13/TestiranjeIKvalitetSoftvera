@page "/TipoviKarata/Obrisi/{id:int}"
@model MuseumTickets.Web.Pages.TicketTypes.DeleteModel
@{
    ViewData["Title"] = "Obriši tip karte";
}

<h1>Obriši tip karte</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Item is not null)
{
    <div class="alert alert-warning">
        Da li ste sigurni da želite da obrišete sledeći tip karte?
    </div>

    <table class="table table-bordered w-auto">
        <tr><th>Šifra</th><td>@Model.Item.Id</td></tr>
        <tr><th>Naziv</th><td>@Model.Item.Name</td></tr>
        <tr><th>Cena</th><td>@Model.Item.Price</td></tr>
        <tr><th>Muzej</th><td>@Model.Item.MuseumId</td></tr>
        <tr><th>Opis</th><td>@Model.Item.Description</td></tr>
    </table>

    <form method="post">
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Odustani</a>
    </form>

    <p class="text-muted mt-3">
        Napomena: ako postoji porudžbina koja koristi ovaj tip karte, brisanje će vratiti
        <strong>409 Conflict</strong> i ostaćemo na ovoj stranici sa porukom greške.
    </p>
}
else
{
    <div class="alert alert-warning">Nije pronađeno.</div>
}
