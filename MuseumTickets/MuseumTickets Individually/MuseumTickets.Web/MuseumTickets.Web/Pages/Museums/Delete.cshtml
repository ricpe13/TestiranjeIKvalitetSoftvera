@page "/Muzeji/Obrisi/{id:int}"
@model MuseumTickets.Web.Pages.Museums.DeleteModel
@{
    ViewData["Title"] = "Obriši muzej";
}

<h1>Obriši muzej</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Item is not null)
{
    <div class="alert alert-warning">
        Da li ste sigurni da želite da obrišete sledeći muzej?
    </div>

    <table class="table table-bordered w-auto">
        <tr><th>Šifra</th><td>@Model.Item.Id</td></tr>
        <tr><th>Naziv</th><td>@Model.Item.Name</td></tr>
        <tr><th>Grad</th><td>@Model.Item.City</td></tr>
        <tr><th>Opis</th><td>@Model.Item.Description</td></tr>
    </table>

    <form method="post">
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Odustani</a>
    </form>

    <p class="text-muted mt-3">
        Napomena: ako postoje izložbe/porudžbine povezane sa ovim muzejem, brisanje može biti onemogućeno (FK ograničenja).
    </p>
}
else
{
    <div class="alert alert-warning">Nije pronađeno.</div>
}
