@page "/Muzeji"
@model MuseumTickets.Web.Pages.Museums.IndexModel
@{
    ViewData["Title"] = "Muzeji";
}

<h1 class="mb-3">Muzeji</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">+ Kreiraj</a>
    
</p>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Items is { Count: > 0 })
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Šifra</th>
                <th>Naziv</th>
                <th>Grad</th>
                <th style="width:220px">Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Items)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.City</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@m.Id">Detalji</a>
                        <a class="btn btn-sm btn-outline-primary ms-1" asp-page="Edit" asp-route-id="@m.Id">Izmeni</a>
                        <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@m.Id">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-info">Još uvek nema muzeja.</div>
}
