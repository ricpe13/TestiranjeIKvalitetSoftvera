@page "/Izlozbe"
@model MuseumTickets.Web.Pages.Exhibitions.IndexModel
@{
    ViewData["Title"] = "Izložbe";
}

<h1 class="mb-3">Izložbe</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">+ Kreiraj</a>
</p>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Items is { Count: > 0 })
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Šifra</th>
                <th>Naziv</th>
                <th>Početak</th>
                <th>Završetak</th>
                <th>Muzej</th>
                <th style="width:220px">Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Items)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Title</td>
                    <td>@x.StartDate.ToString("d")</td>
                    <td>@(x.EndDate.HasValue ? x.EndDate.Value.ToString("d") : "—")</td>
                    <td>@x.MuseumId</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@x.Id">Detalji</a>
                        <a class="btn btn-sm btn-outline-primary ms-1" asp-page="Edit" asp-route-id="@x.Id">Izmeni</a>
                        <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@x.Id">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-info">Još uvek nema izložbi.</div>
}
