@page "/Izlozbe/Obrisi/{id:int}"
@model MuseumTickets.Web.Pages.Exhibitions.DeleteModel
@{
    ViewData["Title"] = "Obriši izložbu";
}

<h1>Obriši izložbu</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Item is not null)
{
    <div class="alert alert-warning">
        Da li ste sigurni da želite da obrišete sledeću izložbu?
    </div>

    <table class="table table-bordered w-auto">
        <tr><th>Šifra</th><td>@Model.Item.Id</td></tr>
        <tr><th>Naziv</th><td>@Model.Item.Title</td></tr>
        <tr><th>Početak</th><td>@Model.Item.StartDate.ToString("D")</td></tr>
        <tr><th>Završetak</th><td>@(Model.Item.EndDate.HasValue ? Model.Item.EndDate.Value.ToString("D") : "—")</td></tr>
        <tr><th>Muzej</th><td>@Model.Item.MuseumId</td></tr>
        <tr><th>Opis</th><td>@Model.Item.Description</td></tr>
    </table>

    <form method="post">
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Odustani</a>
    </form>

    <p class="text-muted mt-3">
        Napomena: ako postoje porudžbine povezane sa ovom izložbom, brisanje može biti onemogućeno (FK ograničenja).
    </p>
}
else
{
    <div class="alert alert-warning">Nije pronađeno.</div>
}
