@page "/Porudzbine/Kreiraj"
@model MuseumTickets.Web.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Kreiraj porudžbinu";
}

<h1>Kreiraj porudžbinu</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Input.BuyerName" class="form-label"></label>
        <input asp-for="Input.BuyerName" class="form-control" />
        <span asp-validation-for="Input.BuyerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.BuyerEmail" class="form-label"></label>
        <input asp-for="Input.BuyerEmail" class="form-control" />
        <span asp-validation-for="Input.BuyerEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Quantity" class="form-label"></label>
        <input asp-for="Input.Quantity" class="form-control" />
        <span asp-validation-for="Input.Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.TicketTypeId" class="form-label"></label>
        <select asp-for="Input.TicketTypeId" class="form-select" asp-items="Model.TicketTypeOptions">
            <option value="">-- izaberi tip karte --</option>
        </select>
        <span asp-validation-for="Input.TicketTypeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ExhibitionId" class="form-label"></label>
        <select asp-for="Input.ExhibitionId" class="form-select" asp-items="Model.ExhibitionOptions">
            <option value="">-- izaberi izložbu --</option>
        </select>
        <span asp-validation-for="Input.ExhibitionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Otkaži</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
