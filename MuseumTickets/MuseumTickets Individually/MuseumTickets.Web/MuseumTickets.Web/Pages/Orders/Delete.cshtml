@page "/Porudzbine/Obrisi/{id:int}"
@model MuseumTickets.Web.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Obriši porudžbinu";
}

<h1>Obriši porudžbinu</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Item is not null)
{
    <div class="alert alert-warning">
        Da li ste sigurni da želite da obrišete sledeću porudžbinu?
    </div>

    <table class="table table-bordered w-auto">
        <tr><th>Šifra</th><td>@Model.Item.Id</td></tr>
        <tr><th>Kupac</th><td>@Model.Item.BuyerName</td></tr>
        <tr><th>Email</th><td>@Model.Item.BuyerEmail</td></tr>
        <tr><th>Količina</th><td>@Model.Item.Quantity</td></tr>
        <tr><th>Tip karte</th><td>@Model.Item.TicketTypeId</td></tr>
        <tr><th>Izložba</th><td>@Model.Item.ExhibitionId</td></tr>
        <tr><th>Poručeno</th><td>@Model.Item.OrderedAt.ToString("f")</td></tr>
    </table>

    <form method="post">
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Odustani</a>
    </form>
}
else
{
    <div class="alert alert-warning">Nije pronađeno.</div>
}
